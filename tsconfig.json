{
  "compilerOptions": {
    "target": "ES2017",

    "module": "CommonJS",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,

    "skipLibCheck": true,
    "declaration": true,
    "isolatedModules": true,
  }
}